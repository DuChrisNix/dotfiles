" Currently using Janus with default settings 
set encoding=utf-8

" Use Tomorrow color scheme installed in ~/.janus
" colorscheme Tomorrow-Night

" User solarized dark 
" set background=dark
" colorscheme solarized

" Use Steve Losh's badwolf colorscheme
colorscheme badwolf

" Wraps and indicates if a line was wrapped
set wrap
set showbreak=â†ª

" Tab settings
set ts=2 sts=2 sw=2 expandtab

" Intendation without losing visual selection
vmap > >gv
vmap < <gv

" Let the buffer change without saving the current buffer
set hidden

" No beep anymore
set visualbell

" Remaping beginning and end of line
noremap H ^
noremap L $

" j/k working on wrapped lines
noremap j gj
noremap k gk
noremap gj j
noremap gk k

" Moving single lines
nmap <M-Up> [e
nmap <M-Down> ]e
nmap <M-k> [e
nmap <M-j> ]e

" Bubble multiple lines
vmap <M-Up> [egv
vmap <M-Down> ]egv
vmap <M-k> [egv
vmap <M-j> ]egv

" Easy buffer navigation
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l

" Minimum number of lines above and below the cursor
set scrolloff=5

" Highlight current line
set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey20

" Cursor is in the center after search
nnoremap n nzz
nnoremap N Nzz
nnoremap * *zz
nnoremap # #zz
nnoremap g* g*zz
nnoremap g# g#zz

" Don't move on *
nnoremap * *<c-o>

" Hightlight text which goes over 80 columns
" highlight OverLength ctermbg=red ctermfg=white guibg=#592929
" match OverLength /\%81v.\+/

" Changing color of matching brackets
hi! link MatchParen Search

" Clear search with <leader><space>
nnoremap <leader><space> :noh<cr>

" Clear search with escape key
nnoremap <esc> :noh<cr><esc>

" Substitution is always global
set gdefault

" Save when losing focus
au FocusLost * :silent! wall

" Correct syntax-highlight for scss files (OSX)
au BufRead,BufNewFile *.scss set filetype=scss

" Enabled for ruby-blocks plugin
runtime macros/matchit.vim
